<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="management_user" model="ir.actions.act_window">
        <field name="name">User Management</field>
        <field name="res_model">filesharing.user</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="management_file" model="ir.actions.act_window">
        <field name="name">Management File</field>
        <field name="res_model">filesharing.file</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="management_proyek" model="ir.actions.act_window">
        <field name="name">Management Proyek</field>
        <field name="res_model">filesharing.proyek</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="management_divisi" model="ir.actions.act_window">
        <field name="name">Management Divisi</field>
        <field name="res_model">filesharing.divisi</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="management_profil" model="ir.actions.act_window">
        <field name="name">Management Profil</field>
        <field name="res_model">filesharing.profil</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="filesharing_root_menu" name="File Sharing" groups="file-sharing-terintegrasi.group_jabatan_admin">
        <menuitem id="filesharing_user_management_menu" name="Management User" action="management_user" />
        <menuitem id="filesharing_file_management_menu" name="Management File" action="management_file" />
        <menuitem id="filesharing_proyek_management_menu" name="Management Proyek" action="management_proyek" />
        <menuitem id="filesharing_divisi_management_menu" name="Management Divisi" action="management_divisi" />
        <menuitem id="filesharing_profil_management_menu" name="Management Profil" action="management_profil" />
    </menuitem>
</odoo>